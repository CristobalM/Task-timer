<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"

    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"

        >

        <TextView
            android:layout_columnSpan="3"
            android:text="Pick a sound"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"

            />

        <Space
            android:layout_height="50dp"
            android:layout_columnSpan="3"
           />


        <ImageView
            android:id="@+id/sound_one"
            android:src="@drawable/ic_musical_note"
            android:layout_marginRight="50dp"
            />

        <ImageView
            android:id="@+id/sound_two"
            android:src="@drawable/ic_musical_note"

            />

        <ImageView
            android:id="@+id/sound_three"
            android:src="@drawable/ic_musical_note"
            android:layout_marginLeft="50dp"

            />

        <Space

            android:layout_height="60dp"
            android:layout_columnSpan="3"

            />

        <ImageView
            android:id="@+id/sound_four"
            android:src="@drawable/ic_musical_note"
            android:layout_marginRight="50dp"


            />

        <ImageView
            android:id="@+id/sound_five"
            android:src="@drawable/ic_musical_note"


            />

        <ImageView
            android:id="@+id/sound_six"
            android:src="@drawable/ic_musical_note"
            android:layout_marginLeft="50dp"



            />

        <Space
            android:layout_height="60dp"
            android:layout_columnSpan="3"

            />

        <ImageView
            android:id="@+id/sound_seven"
            android:src="@drawable/ic_musical_note"

            />

    </GridLayout>

</LinearLayout>