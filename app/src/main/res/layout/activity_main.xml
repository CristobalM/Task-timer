<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cristobalm.myapplication.UI.MainActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/SecondLinearLayout"
            >
            <Button
                android:id="@+id/button_add"
                android:background="@drawable/ic_add_box_black_24px"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/button_play"
                android:background="@drawable/ic_play_arrow_black_24px"
                android:layout_height="30dp"
                android:layout_width="40dp"
                android:layout_toLeftOf="@+id/button_pause"

                 />

            <Button
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/button_pause"
                android:background="@drawable/ic_pause_black"
                android:layout_toLeftOf="@+id/button_stop"

                />
            <Button
                android:id="@+id/button_stop"
                android:background="@drawable/ic_stop_black_24px"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>



        <ScrollView
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ScrollView"
            android:layout_below="@id/SecondLinearLayout"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/et_list"

                />
        </ScrollView>


</RelativeLayout>
