<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.example.cristobalm.myapplication.UI.GreatTimeListItem.TimeDescription
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_description"
        android:background="@color/colorDescription"
        android:textColor="@color/colorWhite"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />


    <com.example.cristobalm.myapplication.UI.GreatTimeListItem.TimeCountdownView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/time_countdown_view"
        android:background="@color/colorCountDown"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:focusable="false"
        android:text="00:00:00"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        />

    <com.example.cristobalm.myapplication.UI.GreatTimeListItem.TimeDraggable
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/time_draggable"
        android:background="@color/colorBlack"
        />

</merge>