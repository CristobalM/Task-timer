<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/title_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_task_time"
        android:textSize="20sp"
        android:paddingLeft="50dp"
        android:paddingStart="50dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="30dp"
        android:textColor="@color/colorBlack"
        />

    <com.example.cristobalm.myapplication.UI.GreatTimePicker.GreatTimePicker
        android:id="@+id/great_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/title_select_time"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>