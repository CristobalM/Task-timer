<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/colorBackground"
    >

    <TextView
        android:id="@+id/description_text_notif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_toLeftOf="@+id/countdown_text"
        android:paddingRight="20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:background="@color/transparent"
        />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:layout_toLeftOf="@+id/notif_button_play"
        android:layout_toStartOf="@id/notif_button_play"
        android:background="@color/white_more_transparency"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="20sp"


        />

    <ImageView
        android:id="@+id/notif_button_play"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:src="@drawable/ic_play"
        android:layout_toLeftOf="@+id/notif_button_stop"
        android:padding="15dp"
        android:background="@color/whiteTransparent"
        />

    <ImageView
        android:id="@+id/notif_button_pause"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_pause"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/notif_button_stop"
        android:padding="15dp"
        android:background="@color/whiteTransparent"



        />

    <ImageView
        android:id="@+id/notif_button_stop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_stop"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:background="@color/whiteTransparent"


        />


</RelativeLayout>